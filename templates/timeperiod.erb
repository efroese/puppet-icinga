define timeperiod{
    timeperiod_name    <%= name %>
    alias              <%= timeperiod_alias %>
    <% if use.length > 0 -%>
    use                <%= use %>
    <% end -%>
    <% if not includes.empty? -%>
    <% includes.keys.sort.each do |key| -%>
    <%= key %>      <%= includes[key] %>
    <% end -%>
    <% end -%>
    <% if not exceptions.empty? -%>
    <% exceptions.keys.sort.each do |key| -%>
    <%= key %>      <%= exceptions[key] %>
    <% end -%>
    <% end -%>
    <% if not excludes.empty? -%>
    excludes <%= excludes.sort.join(',') %>
    <% end -%>
}
